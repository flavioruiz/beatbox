<h2 class='h2 center mb20 mt20'>Login<h2>  
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <div class="section">
    <%= f.label :email,"Email", :class => :label_tag %><br />
    <%= f.text_field :email ,:class => :text_field %><br />
  </div>
  <div class="section">
    <%= f.label :password,"Password", :class => :label_tag %><br />
    <%= f.password_field :password , :class => :text_field%><br />
  </div>
  <div class="section">
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  </div>
  <%= f.submit "Login", :class => :rounded_corners %>
<% end %>

